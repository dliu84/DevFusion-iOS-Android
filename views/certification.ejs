<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Get Certified</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>

<body tabindex="-1" class="bg-gray-50 text-gray-900">

    <!-- Navbar -->
    <%- include('partials/navbar', {page: '/certification'}) %>
    <div class="bg-gradient-to-r from-gray-100 to-gray-200 min-h-screen flex items-center justify-center">
    <% if(isPass) {%>
    <div>
        <div class="relative p-6 bg-white bg-opacity-80 shadow-lg w-[400px] h-[275px] flex flex-col items-center justify-center space-y-4">
    
            <!-- Certificate Canvas -->
            <canvas id="certificateCanvas" class="absolute inset-0 w-full h-full"></canvas>
        </div>
        <div class="z-10 flex space-x-4">
            <button class="bg-green-500 text-white text-lg px-5 py-2 rounded-md hover:bg-green-600" onclick="downloadCertificate()">Download Certificate</button>
            <a href="/Home" class="bg-sky-400 text-white text-lg px-5 py-2 rounded-md hover:bg-sky-500">Go to Homepage</a>
        </div>
    </div>
    <script>
      const userName = "<%= userName %>";

      const canvas = document.getElementById('certificateCanvas');
      const ctx = canvas.getContext('2d');
      const backgroundImage = new Image();
      backgroundImage.src = '/assets/certificate.png';

      backgroundImage.onload = () => {
          canvas.width = backgroundImage.width;
          canvas.height = backgroundImage.height;

          // Draw background image
          ctx.drawImage(backgroundImage, 0, 0, canvas.width, canvas.height);

          // Set text styles
          ctx.fillStyle = '#000';
          ctx.textAlign = 'center';

          ctx.font = 'bold 170px sans-serif';
          ctx.fillText('CERTIFICATE OF ACHIEVEMENT', canvas.width / 2, canvas.height / 7);

          ctx.font = '96px Arial';
          ctx.fillText('This certificate is proudly presented to', canvas.width / 2, canvas.height / 4.5);

          ctx.font = 'bold 240px Arial';
          ctx.fillText(userName, canvas.width / 2, canvas.height / 2.5);

          ctx.font = '96px Arial';
          ctx.fillText('We certify that this user has successfully completed', canvas.width / 2, canvas.height / 1.9);
          ctx.fillText('a certification of iOS development.', canvas.width / 2, canvas.height / 1.9 + 96);
      };

      function downloadCertificate() {
          const link = document.createElement('a');
          link.download = 'certificate.png';
          link.href = canvas.toDataURL();
          link.click();
      }
  </script>
  <% } else {%>
    <div class="w-full max-w-md bg-white shadow-lg rounded-xl p-8 mx-4 text-center">
        <h1 class="text-4xl font-bold text-red-600 mb-4">Certification Exam</h1>
        <p class="text-lg text-gray-700 mb-6">Clear the certification exam to get certified!</p>
        <a href="/test" class="block mt-4 text-blue-500 hover:underline">
            <button class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600">
                Attempt Exam
            </button>
        </a>
    </div>
  <% } %>
    </div>

</body>
</html>