<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DevFusion: IOS & Android</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>

<body tabindex="-1" class="bg-gray-50 text-gray-900">

  <!-- Navbar -->
  <%- include('partials/navbar', {page: '/'}) %>
  
  <!-- Hero Section -->
  <section class="hero bg-gradient-to-r from-blue-500 to-indigo-600 text-white py-24">
    <div class="container mx-auto text-center">
      <h1 class="text-6xl font-extrabold tracking-tight">Welcome to DevFusion: IOS & Android</h1>
      <p class="mt-6 text-2xl font-light leading-relaxed">Learn, Test, and Get Certified. Elevate your skills in tech with us!</p>
      
      <!-- Call to Action Button -->
      <% if(!session.user) { %>
        <a href="/login" class="mt-8 inline-block bg-indigo-700 hover:bg-indigo-800 text-white font-semibold py-3 px-6 rounded-lg shadow-lg transform hover:scale-105 transition duration-300 ease-in-out text-lg">Get Started</a>
      <% } else { %>
        <a href="/content" class="mt-8 inline-block bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-6 rounded-lg shadow-lg transform hover:scale-105 transition duration-300 ease-in-out text-lg">Explore Content</a>
      <% } %>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 bg-gray-100">
    <div class="container mx-auto text-center">
      <h2 class="text-5xl font-bold mb-12 text-gray-800">What We Offer</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        <a href="/content" class="block">
          <div class="feature-box p-8 bg-white shadow-xl rounded-xl transition-transform duration-300 transform hover:scale-105">
            <h3 class="text-3xl font-semibold mb-4 text-indigo-700">Learning Content</h3>
            <p class="text-lg text-gray-600">Access curated content to boost your development skills.</p>
          </div>
        </a>
        <a href="/test" class="block">
          <div class="feature-box p-8 bg-white shadow-xl rounded-xl transition-transform duration-300 transform hover:scale-105">
            <h3 class="text-3xl font-semibold mb-4 text-green-600">Practice Tests</h3>
            <p class="text-lg text-gray-600">Evaluate your knowledge with our comprehensive tests.</p>
          </div>
        </a>
        <a href="/certification" class="block">
          <div class="feature-box p-8 bg-white shadow-xl rounded-xl transition-transform duration-300 transform hover:scale-105">
            <h3 class="text-3xl font-semibold mb-4 text-blue-600">Get Certified</h3>
            <p class="text-lg text-gray-600">Complete tests and earn certificates to validate your expertise.</p>
          </div>
        </a>
      </div>
    </div>
  </section>
  

  <!-- Call to Action Section -->
  <section class="py-20 bg-gradient-to-r from-green-400 to-teal-500 text-white text-center">
    <h2 class="text-5xl font-extrabold">Ready to Start?</h2>
    <p class="mt-6 text-lg">Join DevFusion today and take your tech skills to the next level.</p>
    
    <% if(!session.user) { %>
      <a href="/login" class="mt-8 inline-block bg-indigo-700 hover:bg-indigo-800 text-white font-semibold py-3 px-6 rounded-lg shadow-lg transform hover:scale-105 transition duration-300 ease-in-out text-lg">Get Started</a>
    <% } else { %>
      <a href="/content" class="mt-8 inline-block bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-6 rounded-lg shadow-lg transform hover:scale-105 transition duration-300 ease-in-out text-lg">Explore Content</a>
    <% } %>
  </section>

  <!-- Testimonials Section -->
<section class="py-20 bg-gray-100 text-gray-900">
  <div class="container mx-auto text-center">
    <h2 class="text-4xl font-bold mb-8">What Our Learners Say</h2>

    <!-- Grid Layout for Star Rating and Feedbacks -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

      <!-- Star Rating Summary Column -->
      <div class="md:col-span-1 text-center md:text-right">
        <div class="text-3xl font-bold text-yellow-500"><%= avgRating.toFixed(1) %>/5</div>
        <div class="text-gray-700 mb-6">Based on <%= totalReviews %> reviews</div>

        <% for (let i = 5; i >= 1; i--) { %>
          <div class="flex items-center mb-4">
            <span class="text-yellow-500 text-lg w-1/4"><%= i %> ★ </span>
            <div class="bg-gray-300 rounded-full h-4 w-3/4">
              <div class="bg-yellow-500 h-4 rounded-full" 
                  style="width: <%= (summary.find(s => s._id === i)?.count || 0) / totalReviews * 100 %>%;"></div>
            </div>
          </div>
        <% } %>
      </div>

      <!-- User Feedbacks Column spanning columns 2 and 3 with Scrollable Div -->
      <div class="md:col-span-2 overflow-y-auto max-h-80">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% recentReviews.forEach(review => { %>
            <div class="bg-white p-6 rounded-lg shadow-md text-left mb-4 col-span-1 md:col-span-2">
              <div class="flex items-center mb-2">
                <span class="text-yellow-500 mr-2">
                  <% for (let j = 0; j < review.feedback.rating; j++) { %> ★ <% } %> 
                  <% for (let k = 0; k < 5 - review.feedback.rating; k++) { %> <span>☆</span> <!-- Empty star -->
                  <% } %>
                </span>
                <span class="text-gray-500"> - Rated <%= review.feedback.rating %> Stars</span>
              </div>
              <p class="text-gray-700"><%= review.feedback.message %></p>
            </div>
          <% }) %>
        </div>
      </div>


      
    </div>
  </div>
</section>


  <!-- Footer Section -->
  <footer class="bg-gray-900 text-gray-400 py-10">
    <div class="container mx-auto text-center">
      <p class="mb-4">&copy; 2024 DevFusion: IOS & Android. All rights reserved.</p>
      <div class="space-x-4">
        <a href="/about" class="hover:text-white">About</a>
        <a href="/contact" class="hover:text-white">Contact</a>
        <a href="/privacy" class="hover:text-white">Privacy Policy</a>
        <a href="/terms" class="hover:text-white">Terms of Service</a>
      </div>
    </div>
  </footer>

</body>
</html>
